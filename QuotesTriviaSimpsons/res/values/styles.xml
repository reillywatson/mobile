<?xml version="1.0" encoding="utf-8"?>
<resources>
	<style name="AnswerButton">
        <item name="android:background">@drawable/answer_small</item>
		<item name="android:textStyle">bold</item>
		<item name="android:ellipsize">marquee</item>
		<item name="android:typeface">sans</item>
		<item name="android:textColor">@color/white</item>
		<item name="android:gravity">center_horizontal</item>
		<item name="android:maxLines">2</item>
        <item name="android:layout_marginTop">2px</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    
    <style name="ResultMessage">
	    <item name="android:padding">5px</item>
	    <item name="android:textStyle">bold</item>
		<item name="android:typeface">sans</item>
		<item name="android:textColor">@color/white</item>
		<item name="android:gravity">center_horizontal</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    
    <style name="ScoreNumber">
    	<item name="android:textColor">#b67b3f</item>
		<item name="android:gravity">right</item>
		<item name="android:textStyle">bold</item>
		<item name="android:layout_marginRight">5px</item>
		<item name="android:layout_width">17px</item>
		<item name="android:layout_height">wrap_content</item>
    </style>
</resources>
