<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">
    <RelativeLayout android:orientation="vertical" android:layout_width="fill_parent" android:layout_height="fill_parent">
    	
    	<ImageView android:id="@+id/photo" 
    		android:clickable="true" 
    		android:minHeight="100px" 
    		android:minWidth="100px" 
			android:layout_centerHorizontal="true" 
			android:layout_width="wrap_content" 
			android:layout_height="wrap_content"></ImageView>
		
		<LinearLayout 
			android:orientation="horizontal" 
			android:layout_alignParentBottom="true" 
			android:layout_centerHorizontal="true"
			android:layout_width="wrap_content" 
			android:layout_height="wrap_content" >
			
			<Button android:id="@+id/not" android:text="@string/not" android:layout_width="wrap_content" android:layout_height="wrap_content"></Button>
			<Button android:id="@+id/meh" android:text="@string/meh" android:layout_width="wrap_content" android:layout_height="wrap_content"></Button>
			<Button android:id="@+id/hot" android:text="@string/hot" android:layout_width="wrap_content" android:layout_height="wrap_content"></Button>
			
		</LinearLayout>
		
		<RadioGroup android:id="@+id/votepicker" android:layout_width="wrap_content" android:layout_height="wrap_content"></RadioGroup>
	</RelativeLayout>
</LinearLayout>
